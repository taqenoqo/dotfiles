	log = delta
	reflog = delta
	show = delta
[pull]
	ff = only
[delta]
	line-numbers = true
	side-by-side = true
	light = true
	hunk-header-style = omit
	file-decoration-style = box blue
[core]
	excludesfile = ~/.gitignore
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
